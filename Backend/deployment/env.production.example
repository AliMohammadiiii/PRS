# CFOWise Production Environment Configuration
# Copy this file to /opt/cfowise/.env and update with your actual values
# NEVER commit .env file to version control

# Django Settings
SECRET_KEY=your-secret-key-here-generate-with-openssl-rand-base64-32
DEBUG=False
# Note: ALLOWED_HOSTS can also be set via DJANGO_ALLOWED_HOSTS in systemd service file
ALLOWED_HOSTS=innovation.nntc.io,www.innovation.nntc.io,127.0.0.1,localhost

# Database Configuration (PostgreSQL recommended for production)
DATABASE_URL=postgresql://cfowise:your-database-password@localhost:5432/cfowise

# Static and Media Files
STATIC_ROOT=/opt/cfowise/Backend/staticfiles
MEDIA_ROOT=/opt/cfowise/media

# Subpath deployment (set to /cfowise for innovation.nntc.io/cfowise)
FORCE_SCRIPT_NAME=/cfowise

# CORS Configuration (comma-separated list of allowed origins)
CORS_ALLOWED_ORIGINS=https://innovation.nntc.io,https://www.innovation.nntc.io

# CSRF Configuration (required for Django admin and forms)
# Should match your domain(s) - must include protocol (http:// or https://)
CSRF_TRUSTED_ORIGINS=https://innovation.nntc.io,https://www.innovation.nntc.io

# Logging
LOG_FILE=/var/log/cfowise/django.log
LOG_LEVEL=INFO

# Security
# Set to False to allow both HTTP and HTTPS, True to force HTTPS redirect
SECURE_SSL_REDIRECT=False

# Frontend API URL (if different from same domain)
# API_BASE_URL=https://innovation.nntc.io/cfowise/api
# or
# API_BASE_URL=https://innovation.nntc.io/cfowise/api

