# For production configuration, see deployment/env.production.example

# Django Settings
SECRET_KEY=change-me-in-development
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
# SQLite (default - for development only):
# DATABASE_URL=sqlite:///Backend/db.sqlite3

# PostgreSQL (recommended for production, can be used in development):
# DATABASE_URL=postgresql://cfowise:password@localhost:5432/cfowise

# Static and Media Files (optional - uses defaults if not set)
