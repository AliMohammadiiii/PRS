# CFOWise Development Environment Configuration
# Copy this file to .env and adjust values for local development
# For production configuration, see deployment/env.production.example

# Django Settings
SECRET_KEY=change-me-in-development
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
# SQLite (default - for development only):
# DATABASE_URL=sqlite:///Backend/db.sqlite3

# PostgreSQL (recommended for production, can be used in development):
# DATABASE_URL=postgresql://cfowise:password@localhost:5432/cfowise

# Static and Media Files (optional - uses defaults if not set)
# STATIC_ROOT=Backend/staticfiles
# MEDIA_ROOT=Backend/media

# CORS Configuration (optional - allows all in development when DEBUG=True)
# CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:8080

# Logging (optional)
# LOG_FILE=Backend/logs/django.log
# LOG_LEVEL=DEBUG

# Email Configuration
# For development, console backend is used (emails printed to console)
# EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
# For production, use SMTP backend
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.example.com
# EMAIL_PORT=587
# EMAIL_HOST_USER=your-email@example.com
# EMAIL_HOST_PASSWORD=your-password
# EMAIL_USE_TLS=True
# EMAIL_USE_SSL=False
# DEFAULT_FROM_EMAIL=noreply@example.com

# PRS Completion Email (organizational inbox for completed purchase requests)
# PRS_COMPLETION_EMAIL=finance@example.com

# Messenger-Only Mode Configuration
# Domains that should show messenger-only UX for non-admin users
# Multiple domains can be specified, separated by commas
# Example: MESSENGER_ONLY_DOMAINS=ai.example.com,ai.internal.local
# For local development, you can use: MESSENGER_ONLY_DOMAINS=localhost,127.0.0.1
# MESSENGER_ONLY_DOMAINS=






